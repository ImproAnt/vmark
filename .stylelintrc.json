{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "color-no-hex": [
      true,
      {
        "message": "Use CSS variable tokens instead of hex colors (see design-system.md)",
        "severity": "warning"
      }
    ],
    "function-disallowed-list": [
      ["rgba", "rgb"],
      {
        "message": "Prefer CSS variable tokens. If rgba needed, add .dark-theme override.",
        "severity": "warning"
      }
    ],
    "declaration-property-value-disallowed-list": {
      "outline": ["none"],
      "box-shadow": ["/^0 \\d+px/"]
    },
    "selector-disallowed-list": [
      ["/\\[data-theme/"],
      {
        "message": "Use .dark-theme selector instead of [data-theme] attribute selector"
      }
    ],
    "comment-pattern": "/FIXME|TODO|HACK/",
    "custom-property-pattern": "^(bg|text|primary|border|accent|selection|code|md|popup|radius|shadow|btn|icon|font|editor|hover|error|warning|success)-",
    "selector-class-pattern": null
  },
  "ignoreFiles": ["node_modules/**", "dist/**", "src-tauri/**"]
}
